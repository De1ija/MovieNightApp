<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/review_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/movieTitle"
        android:padding="50dp"
        tools:text="reviewContentreviewContent  reviewContentreviewContent reviewContentreviewContent" />

    <TextView
        android:id="@+id/review_author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="18sp"
        app:fontFamily="@font/alegreya_sc"
        android:textStyle="bold|italic"
        android:textColor="@color/movieTitle"
        tools:text="Mike"/>

</FrameLayout>